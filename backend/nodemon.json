{
  "watch": [
    "config/*.js",
    "middleware/*.js",
    "routes/*.js",
    "services/*.js",
    "*.js"
  ],
  "ignore": [
    "whatsapp-session/**",
    ".wwebjs_auth/**",
    ".wwebjs_cache/**",
    "../whatsapp-data/**",
    "node_modules/**",
    "logs/**",
    "*.log",
    "tmp/**",
    ".git/**",
    ".env",
    "package-lock.json"
  ],
  "delay": 2000,
  "verbose": true,
  "ext": "js,json"
} 